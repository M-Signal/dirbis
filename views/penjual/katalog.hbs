{{> menu}}
<div class="col-lg-9">
    <form method="post" class="form-horizontal" id="insert_form" action="/penjual/katalog/insert" enctype="multipart/form-data" data-toggle="validator">
        <div class="col-lg-10">
            <div class="page-header">
                <div class="pull-right">
                    <button class="btn btn-success" type="submit">Add Katalog <i class="fa fa-plus"></i></button>
                </div>
                <h2>New Katalog</h2>
            </div>
            <div class="form-group">
                <label for="frm_product_title" class="col-sm-2 control-label">Katalog Title *</label>
                <div class="col-sm-10">
                    <input type="text" name="title" class="form-control" minlength="5" maxlength="200" value="{{product_title}}" required/>
                </div>
            </div>
            <div class="form-group" id="editor-wrapper">
                <label for="editor" class="col-sm-2 control-label">Katalog Description *</label>
                <div class="col-sm-10">
                    <textarea id="editor" minlength="5" rows="10" name="desc" class="form-control" required>{{product_description}}</textarea>
                </div>
            </div>
            <div class="form-group" id="editor-wrapper">
                <label for="editor" class="col-sm-2 control-label">Attachment *</label>
                <div class="col-sm-10">
                    <input style="width: 100%" 
                    class="btn btn-primary" type="file" name="upload_file">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Permalink</label>
                <div class="col-sm-10">
                    <div class="input-group">
                        <input type="text" class="form-control" name="permalink" id="frm_product_permalink" placeholder="Permalink for the article" value={{product_permalink}}>
                        <span class="input-group-btn">
                            <button class="btn btn-success" id="validate_permalink" type="button">Validate</button>
                            <button class="btn btn-warning" id="generate_permalink" type="button">Generate</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
{{#if editor}}
    <script src="/javascripts/markdown-it.min.js"></script>
    <script src="/javascripts/markdown-editor.js"></script>
{{/if}}