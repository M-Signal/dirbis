{{> dashboard_pembeli}}
<div class="col-lg-9">
    <div class="col-lg-12">
        <h2>Permintaan</h2>
    </div>
    <div class="col-lg-12 search_bar">
        <div class="input-group">
            <input type="text" name="order_filter" id="order_filter" class="form-control input-lg" placeholder="Filter orders">
            <span class="input-group-btn">
                <button class="btn btn-success btn-lg" id="btn_order_filter">Filter</button>
                <a href="#" class="hidden-xs btn btn-warning btn-lg"><i class="fa fa-times" aria-hidden="true"></i></a>
            </span>
        </div>
        <p class="text-warning top-pad-10">Orders can be filtered by: surname, email address or postcode/zipcode</p>
    </div>
    
    <div class="col-lg-12">
        <ul class="list-group">
            <li class="list-group-item">
                {{#if search_term}}
                    <strong>Products - <span class="text-danger">Filtered term: {{search_term}} </span></strong>
                {{else}}
                    <strong>Recent orders</strong>
                {{/if}}
            </li>
            {{#each permintaan}}
                <li class="list-group-item">
                    <h4 class="pull-right" style="padding-left: 10px;">
                        <a class="text-danger" href="/order/delete/{{this.id}}" onclick="return confirm('Are you sure you want to delete this order?');"> <i class="fa fa-trash-o"></i></a>
                    </h4>
                     <h4 class="pull-right" style="padding-left: 10px;">
                    <i class="fa fa-upload"></i>
                    </h4>
                    <div class="list-group">
                        <a href="#" class="list-group-item active">
                            <h4 class="pull-right" style="padding-left: 10px;">
                                <i class="fa fa-trash-o"></i>
                            </h4>   
                            <h4 class="list-group-item-heading">ID Permintaan : {{this.id}}</h4>
                             
                            <hr>
                             
                             <table class="table table-bordered table-hover">
                                 <thead>
                                     <tr>
                                         <th>Nama Produk</th>
                                         <th>Kuantitas</th>
                                         <th>Satuan</th>
                                         <th>Harga</th>
                                         <th>Deskripsi</th>
                                     </tr>
                                 </thead>
                                 <tbody>
                                     <tr>
                                         <td>{{this.name}}</td>
                                         <td>{{this.kuantitas}}</td>
                                         <td>{{this.satuan}}</td>
                                         <td>{{this.harga}}</td>
                                         <td>{{this.desc}}</td>
                                     </tr>
                                 </tbody>
                             </table>
                             
                             <div class="panel panel-success">
                                   <div class="panel-heading">
                                         <h3 class="panel-title">Tujuan Pengiriman</h3>
                                   </div>
                                   <div class="panel-body" style="color: black">
                                       
                                       <div class="row">
                                        <div class="form-group">
                                            <label for="" class="col-sm-2 control-label">Provinsi:</label>
                                            <div class="col-sm-4">
                                                <input type="text" name="provinsi" id="" class="form-control" value="{{this.province}}" required="required" pattern="" title="">
                                            </div>
                                             <label for="" class="col-sm-2 control-label">Kota:</label>
                                            <div class="col-sm-4">
                                                <input type="text" name="provinsi" id="" class="form-control" value="{{this.city}}" required="required" pattern="" title="">
                                            </div>
                                        </div>
                                       </div>
                                       <br>
                                       <div class="row">
                                        <div class="form-group">
                                            <label for="" class="col-sm-2 control-label">Alamat:</label>
                                            <div class="col-sm-10">
                                                <input type="text" name="provinsi" id="" class="form-control" value="{{this.address}}" required="required" pattern="" title="">
                                            </div>
                                        </div>
                                       </div>
                                       <br>
                                       <div class="row">
                                           <div class="col-md-12">
                                               <button class="btn btn-success">EDIT</button>
                                           </div>
                                       </div>

                                   </div>
                             </div>
                        </a>
                    </div>
                 <br>
                </li>
            {{/each}}
               
        </ul>
    </div> 
</div>